<h1>Create new task</h1>

<%= form_for [@user, @user.items.new], remote: true do |f| %>
   <div class="form-group">
       <strong>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: "Enter Task" %></strong>
   </div>
   <div class="form-group">
     <%= f.submit "Save", class: 'btn btn-success' %>
   </div>
<% end %>

