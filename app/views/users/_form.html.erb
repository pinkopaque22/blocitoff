<%= form_for (Item.new) do |f| %>
   <div class="form-group">
       <strong>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: "Enter Task" %></strong>
   </div>
   <div class="form-group">
     <%= f.submit "Save", class: 'btn btn-success' %>
   </div>
<% end %>